<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - CodeSphere</title>

    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <style>
      /* Background Gradient */
      body {
          background: linear-gradient(135deg, #0f172a, #1e293b);
          color: white;
          font-family: 'Poppins', sans-serif;
          text-align: center;
      }

      /* Navbar */
      nav {
          display: flex;
          justify-content: space-between;
          align-items: center;
          padding: 1rem 5%;
          background-color: #1e40af;
          box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
          border-bottom: 3px solid #3b82f6;
      }

      .logo {
          font-size: 1.8rem;
          font-weight: bold;
          display: flex;
          align-items: center;
      }

      .profile-logo a {
          display: flex;
          align-items: center;
          justify-content: center;
          width: 45px;
          height: 45px;
          border-radius: 50%;
          background-color: white;
          text-decoration: none;
          transition: 0.3s;
      }

      .profile-logo a:hover {
          transform: scale(1.1);
          background: #3b82f6;
      }

      /* Learning Path Section */
      .learning-path {
          margin: 20px auto;
          width: 60%;
          background: #1e3a8a;
          padding: 20px;
          border-radius: 8px;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
          text-align: center;
      }

      select {
          width: 80%;
          padding: 10px;
          font-size: 1rem;
          border: 2px solid #3b82f6;
          border-radius: 5px;
          margin: 10px 0;
          background-color: #fff;
          color: #333;
          transition: 0.3s;
      }

      select:hover {
          border-color: #2563eb;
      }

      button {
          width: 80%;
          padding: 10px;
          font-size: 1rem;
          border: none;
          border-radius: 5px;
          margin: 10px 0;
          background-color: #3b82f6;
          color: white;
          cursor: pointer;
          transition: 0.3s;
      }

      button:hover {
          background-color: #2563eb;
      }

      /* Courses Section */
      .courses-container {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); /* Increased min width */
          gap: 20px;
          padding: 2rem;
      }

      .course-card {
          background-color: #1e3a8a;
          border-radius: 10px;
          padding: 57px; /* Increased padding */
          text-align: center;
          font-size: 1.5rem; /* Increased font size */
          font-weight: bold;
          color: white;
          transition: 0.3s;
          box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
          position: relative;
          overflow: hidden;
      }

      .course-card:hover {
          background-color: #2563eb;
          transform: translateY(-5px);
      }

      .course-info {
          position: absolute;
          bottom: -100%;
          left: 0;
          width: 100%;
          height: 100%;
          background: rgba(46, 89, 229, 0.9);
          color: white;
          padding: 10px;
          font-size: 0.9rem;
          display: flex;
          align-items: center;
          justify-content: center;
          text-align: center;
          transition: 0.3s;
      }

      .course-card:hover .course-info {
          bottom: 0;
      }

      /* Learning Info Section */
      .learning-info {
          margin: 50px auto;
          width: 70%;
          padding: 20px;
          background: #1e3a8a;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
          border-radius: 8px;
      }

      /* Responsive Design */
      @media (max-width: 768px) {
          .learning-path {
              width: 80%;
          }
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav>
      <div class="logo">CodeSphere</div>
      <div class="profile-logo">
        <a href="/profile">
          <i class="fas fa-user"></i>
        </a>
      </div>
    </nav>

    <header>
      <h1>Welcome to Your Dashboard</h1>
    </header>

    <main>
      <div class="learning-path">
        <h3>Select Your Learning Path</h3>
        <form action="/select-learning-path" method="POST">
          <select name="learningPath" required>
            <option value="" disabled selected>Select a Path</option>
            <% let paths = ["DSA", "Full Stack", "Blockchain", "AI/ML", "Cybersecurity", "DevOps", "IoT", "Data Science", "Competitive Programming", "Mobile Development"]; %>
            <% paths.forEach(path => { %>
              <option value="<%= path %>"><%= path %></option>
            <% }) %>
          </select>
          <button type="submit">Save</button>
        </form>
      </div>

      <!-- Courses Section -->
      <div class="courses-container">
        <% 
          let courses = ["DSA", "Full Stack", "Blockchain", "AI/ML", "Cybersecurity", "DevOps", "IoT", "Data Science", "Competitive Programming", "Mobile Development"];
          let descriptions = [
            "Learn algorithms & data structures for problem-solving.",
            "Master front-end and back-end web development.",
            "Develop smart contracts and decentralized apps.",
            "Explore AI and machine learning models.",
            "Secure applications and networks from cyber threats.",
            "Learn CI/CD pipelines and cloud deployments.",
            "Build smart devices with IoT technologies.",
            "Analyze and visualize data effectively.",
            "Prepare for coding competitions.",
            "Create Android and iOS apps."
          ];
        %>

        <% courses.forEach((course, index) => { %>
          <div class="course-card">
            <%= course %>
            <div class="course-info">
              <p><%= descriptions[index] %></p>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="learning-info">
        <h2>Why Choose a Learning Path?</h2>
        <p> Selecting the right path helps you gain expertise and achieve career goals. Identify your interests and explore structured courses designed to boost your skills. </p>
      </div>
    </main>
  </body>
</html>